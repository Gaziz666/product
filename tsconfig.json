{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // "plugins": [{ "name": "typescript-plugin-css-modules" }]
        "baseUrl": ".",
        "paths": { "*": ["./src/*"] },
        "strictNullChecks": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
